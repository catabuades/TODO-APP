extends ../layout
block content
  .container-fluid
    .row
      .col-md-4.col-md-offset-4
        .panel.panel-default
          .panel-heading
            h3.panel-title Please sign in
          .panel-body
            form(accept-charset='UTF-8', role='form', action='/login/', method='POST')
              fieldset
                .form-group
                  input.form-control(placeholder='E-mail', name='email', type='email')
                .form-group
                  input.form-control(placeholder='Password', name='password', type='password', value='')
                .checkbox
                  label
                    input(name='remember', type='checkbox', value='Remember Me')
                    |  Remember Me
                input.btn.btn-lg.btn-success.btn-block(type='submit', value='Login')
          a(href='/regist/')
            input.btn.btn-lg.btn-success.btn-block(value='Sign Up')



