extends ../layout
block content
  .container-fluid
    .row
      .col-md-4.col-md-offset-4
        .panel.panel-default
          .panel-heading
            h3.panel-title Registry
          .panel-body
            form(accept-charset='UTF-8', role='form', action='/regist/', method='POST')
              fieldset
                .form-group
                  input.form-control(placeholder='E-mail', name='email', type='email')
                .form-group
                  input.form-control(placeholder='Password', name='password', type='password', value='')
                input.btn.btn-lg.btn-success.btn-block(type='submit', value='Register')
